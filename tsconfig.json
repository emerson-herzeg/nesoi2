{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "declaration": true,
    "removeComments": false,
    "outDir": "./build",
    "strict": true,
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "docs",
    "transformers"
  ]
}
